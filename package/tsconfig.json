{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.1.0",

  "compilerOptions": {
    "declaration": true,
    "lib": ["es2023", "dom"],
    "module": "Node16",
    "target": "es2022",
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "lib"
  },
  "include": ["src/**/*"]
}
